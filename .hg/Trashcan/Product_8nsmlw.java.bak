package warehouse;

public class Product {
    private final Type type;//ТУК ИЗПОЛЗВАМ ФАЙНЪЛ ЗА ДА ИЗБЯГАМЕ ОТ "NULL" и му задаваме дефолтна стойност "Ънноун".
    private double availability;

    public static enum Type {
        BATTER(1, 1),
        TOMATO_SAUCE(1, 3.5),
        HAM(1, 8),
        MOZARELLA(1, 7),
        MUSHROOM(1,5),
        TOMATO(1,10.6),
        BBQ_SAUCE(1,6),
        CHICKEN(1,9),
        FILLET(1,13),
        CUCUMBER(1,4),
        CHEESE(1,8),
        PEPERONI(1,6),
        YELLOW_CHEESE(1, 9),
        PARSLEY(1,10),
        LETTUCE(1,8),
        ARUGULA(1,5),
        CARROT(1,5),
        CABBAGE(1,4),
        CORN(1,10),
        ONION(1,4),
        CHEDDAR(1,11),
        UNKNOWN(0, 0);

        private double quantity;
        private double deliveryPrice;

        //A constructor, who help us to initialize the delivery price for a kilo of every product.
        Type(double quantity, double deliveryPrice) {
            this.quantity = quantity;
            this.deliveryPrice = deliveryPrice;
        }

        public double getQuantity() {
            return quantity;
        }

        public double getDeliveryPrice() {
            return deliveryPrice;
        }
    }

    public Product(Type type, double availability) {
        this.availability = availability;
        this.type = type;
    }

    public Product() {
        availability = 1;
        type = Type.UNKNOWN;
    }

    @Override
    public String toString() {
        return "Product{" +
                "type=" + type +
                ", availability=" + availability +
                '}';
    }
}

